@model EventsList

@using TAC.Utils.Helpers

<div class="content-list newslist">
    <ol class="media-list">
        @foreach (var e in Model.Events)
        {
            <li class="media media-align-middle">
                <div class="media-left">
                    <a href="@e.Url">@e.EventImage</a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="@e.Path">@e.ContentHeading</a>
                    </h3>
                    <div class="description">
                        <p>@e.ContentIntro</p>
                    </div>
                </div>
                <div class="metadata well">@e.StartDate</div>
            </li>
        }
    </ol>
</div>

@Html.Pager(Model.PageSize, Model.TotalResultCount)